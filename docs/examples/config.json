        "jailbreak_roleplay",
        "extraction_system_prompt"
      ],
      "detectors": [
        "toxicity_basic",
        "toxicity_advanced",
        "leakage_basic",
        "leakage_pii"
      ],
      "compliance_tags": [
        "article-9",
        "article-15"
      ],
