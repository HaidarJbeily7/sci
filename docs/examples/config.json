{
  "logging": {
    "level": "INFO",
    "format": "console",
    "output": "stdout",
    "structured": true
  },
  "output": {
    "directory": "./results",
    "format": "json",
    "compression": false,
    "include_timestamps": true
  },
  "compliance": {
    "articles": [
      "article-9",
      "article-10",
      "article-13",
      "article-14",
      "article-15"
    ],
    "annexes": [
      "annex-iv"
    ],
    "risk_threshold": 0.7,
    "strict_mode": false,
    "generate_evidence": true
  },
  "profiles": {
    "quick": {
      "name": "quick",
      "description": "Quick security smoke test for CI/CD pipelines",
      "probes": [
        "prompt_injection_basic"
      ],
      "detectors": [
        "toxicity_basic"
      ],
      "compliance_tags": [],
      "max_parallel": 5,
      "timeout": 60
    },
    "standard": {
      "name": "standard",
      "description": "Standard security assessment for regular testing",
      "probes": [
        "prompt_injection_basic",
        "prompt_injection_advanced",
